<!DOCTYPE html>
<html lang="en">
<head>
  <title>Home</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
      .AddForm {
            background: white;
            border-radius: 1rem;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            margin-top: 1rem; /*ChatGPT for flex direction and alignment*/
            max-width: 600px; 
            margin-left: auto;
            margin-right: auto;
            top: 100%;
            position: relative;
            height: 100%;
        }
    
        body {
            background-image: url('/images/background.jpg');
            background-size: cover;
            background-repeat: no-repeat;  
        }

        h2 {
          color:#92745B;
          font-family:'Trebuchet MS';
          font-weight: bold;
        }

        
        .navbar-brand {
            font-family:'Trebuchet MS';
        }

        .nav-link{
            font: weight 2px;
            color:ghostwhite
        }

        .carousel-caption {
            color: white;
            backdrop-filter: blur(2px)brightness(0.8);
            border-radius: 20px;
        }
        
        nav {
            background-color:#92745B;
        }
    </style>
</head>
  <body>
    <%- include ('partials/staffnav.ejs') %>
    <div class="AddForm">
        <div class="container mt-3">
        <h2>Update Product</h2>

        <% if (product) { %>
            <form action="/editProduct/<%= product.id %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3 mt-3">
                    <label for="name">Product Name:</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Product name" name="name" value="<%= product.name %>" required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="image">Current Image:</label><br>
                    <input type="text" name="currentImage" value="<%= product.image %>" readonly><br><br>
                    <img src="/images/<%= product.image %>" width="20%"><br><br>
                    New Image:<br>
                    <input type="file" id="image" name="image" accept="image/*"><br><br>
                </div>
                <div class="mb-3">
                    <label for="type">Type:</label>
                    <select name="type" id="type" class="form-select" placeholder="None" value=<%= product.type %> required>
                        <option value="Dairy">Dairy</option>
                        <option value="Meat">Meat</option>
                        <option value="Seafood">Seafood</option>
                        <option value="Fruits">Fruits</option>
                        <option value="Vegetables">Vegetables</option>
                        <option value="Drinks">Drinks</option>
                        <option value="Household">Household</option>
                        
                    </select>
                </div>
                <div class="mb-3 mt-3">
                    <label for="price">Price:</label>
                    <input type="text" class="form-control" id="price" placeholder="Enter price" name="price" value=<%= product.price %> required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="quantity">Quantity:</label>
                    <input type="text" class="form-control" id="quantity" placeholder="Enter quantity" name="quantity" value=<%= product.quantity %> required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="notes">Notes:</label>
                    <input type="text" class="form-control" id="notes" placeholder="Enter notes" name="notes"value=<%= product.notes %>>
                </div>  
                <button type="submit" class="btn btn-success">Submit</button>
            </form> 
        <% } %>
</body>
</html>