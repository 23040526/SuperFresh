<!DOCTYPE html>
<html lang="en">
<head>
  <title>Home</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
        body {
            background-image: url('/images/background.webp'); 
            background-size: cover;
            background-repeat: no-repeat;
        }
        .container {
            margin-top: 3rem;
            backdrop-filter: blur(2px) brightness(0.8); 
            border-radius: 10px;
        }
        .card {
            display: flex;
            flex-direction: column;
            height: 100%;
            border-radius: 15px;
            overflow: hidden;
        }
       
        .card-body {
            flex: 1; 
            display: flex;
            flex-direction: column;
        }
        .card-text {
            margin-bottom: auto; 
        }
        .btn.btn-success {
            margin-top: auto; 
            padding: 0.5rem 2rem; 
        }
        .navbar-brand {
            font-family: 'Trebuchet MS';
        }
        .nav-link {
            font-weight: 2px;
            color: ghostwhite;
        }
        nav {
            background-color: green;
        }
        .submit-btn {
            margin-top: 2rem;
            width: 100%;
            font-size: 1.2rem;
            border-radius: 2rem;
            padding: 0.5rem 2rem;
            background: #129606;
            color: white;
            border: 0;
        }
        .submit-btn:hover {
            cursor: pointer;
            background: #0d7e03; 
            text-decoration: none;
        }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <% for(let i=0; i < products.length; i++) { %>
                <% if (products[i].type === 'Vegetables' || products[i].type === 'Fruits') { %>
                    <div class="col mb-4">
                        <div class="card">
                            <img src="/images/<%= products[i].image %>" class="card-img-top" alt="Product Image">
                            <div class="card-body">
                                <h5 class="card-title"><%= products[i].name %></h5>
                                <p class="card-text">Price: $<%= products[i].price %></p>
                                <br>
                                <p class="card-text">Current Stock: <%= products[i].quantity %></p>
                                <form class="cartForm">
                                    <button type="submit" class="submit-btn">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
        <!-- Modal -->
        <div class="modal fade" id="resetModal" tabindex="-1" role="dialog" aria-labelledby="resetModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="resetModalLabel">Item added</h5>
                    </div>
                    <div class="modal-body">
                        Item has been added to your cart
                    </div>
                    <div class="modal-footer">
                        <a href="/all" class="btn btn-success mt-3">OK</a>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function() {
                $('.cartForm').on('submit', function(event) {
                    event.preventDefault();
                    $('#resetModal').modal('show'); 
                });
            });
        </script>
</body>
</html>