<!DOCTYPE html>
<html lang="en">
<head>
  <title>Home</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-image: url('/images/background.jpg');
      font-family: 'Montserrat', sans-serif;
      margin: 0;
      padding: 0;
      height: 100%;
      background-size:cover;
      overflow: hidden;
    }

    .signup-container {
      background: white;
      border-radius: 1rem;
      box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
      display: flex;
      flex-direction: column;
      align-items: left;
      justify-content: center;
      padding: 2rem;
      margin-top: 3rem;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
      top: 100%;
      position: relative;
      transition: all .3s ease-out;
    }
    .form-row {
      position: relative;
      margin-bottom: 1rem;
      width: 100%;
    }

    .form-input {
      box-sizing: border-box;
      padding: 1rem;
      border: 0;
      border-bottom: 1px solid lightgrey;
      width: 100%;
      font-size: 1rem;
      transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-input::placeholder {
      color: transparent;
    }

    .form-input:focus {
      outline: none;
      border-bottom: 2px solid #129606;
    }

    .form-label {
      position: absolute;
      color: gray;
      bottom: 0.5rem;
      left: 0;
      transition: opacity .1s ease-in-out, transform .1s ease-in-out;
    }

    .form-input:focus ~ .form-label,
    .form-input:not(:placeholder-shown) ~ .form-label {
      opacity: .65;
      transform: scale(.85) translateY(-1.3rem);
    }

    .forgot-pwd {
      float: right;
      text-decoration: none;
      color: #129606;
      margin-top: 1rem;
    }

    .submit-btn {
      margin-top: 2rem;
      width: 100%;
      font-size: 1.2rem;
      border-radius: 2rem;
      padding: 0.5rem 2rem;
      background: #129606;
      color: white;
      border: 0;
      transition: background-color 0.3s ease;
    }

    .submit-btn:hover {
      background-color: #0d7e03;
      cursor: pointer;
    }

    .sign-up-text {
      color: gray;
      margin-top: 2rem;
      text-align: center;
    }

    .sign-up-text > a {
      text-decoration: none;
      color: #129606;
    }

    .navbar-brand {
      font-family: 'Trebuchet MS';
    }

    .nav-link {
      font-weight: 2px; 
      color: ghostwhite;
    }
    h2{
      font-weight: bold;
      font-family:"arial";
      color:green
    }
    h9 {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <%- include ('partials/prenav.ejs') %>

<div class="signup-container">
  <form action="/signup" method="POST">
    <img src="/images/SuperFresh.png" alt="SuperFresh icon" height="50" width="200">
    <br>
    <br>
    <h2>Sign-up</h2>
    <br>
    <h9>Please Enter Your Email:</h9>
    <div class="form-row">
      <input type="email" id="email" class="form-input" placeholder="example@email.com" name="email" required>
      <label for="email" class="form-label">Email</label>
    </div>
    <br>
    <h9>Password:</h9>
    <div class="form-row">
      <input type="password" id="password" class="form-input" placeholder="Enter Password here"  name="password"required>
      <label for="password" class="form-label">Password</label>
    </div>
    <br>
    <h9>Repeat Password:</h9>
    <div class="form-row">
      <input type="password" id="check" class="form-input" placeholder="Repeat Password" name="check" required>
      <label for="check" class="form-label">Repeat Password</label>
    </div>
    <button type="submit" class="submit-btn">Submit</button>
    <% if (error) { %>
      <div class="alert alert-danger mt-3" role="alert">
        <%= error %>
      </div>
    <% } %>
  </form>
</div>

<!-- Modal -->
<div class="modal fade" id="SuccessModal" tabindex="-1" role="dialog" aria-labelledby="SuccessModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="SuccessModalLabel">Account Registered</h5>
      </div>
      <div class="modal-body">
        Thank you for registering an account with us!
      </div>
      <div class="modal-footer">
        <a href="/signup" class="btn btn-success mt-3">OK</a>
      </div>
    </div>
  </div>
</div>

<script>
  // JavaScript to show modal if account was successfully added
  const urlParams = new URLSearchParams(window.location.search);
  const success = urlParams.get('Success');

  if (success === 'true') {
    var myModal = new bootstrap.Modal(document.getElementById('SuccessModal'));
    myModal.show();
  }
</script>

</body>
</html>
